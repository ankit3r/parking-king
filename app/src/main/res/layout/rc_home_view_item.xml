<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/l01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_perm_identity_24" />

            <TextView
                android:id="@+id/txtCarNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:drawablePadding="10dp"
                android:minWidth="180dp"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_car_svgrepo_com" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l01">

            <TextView
                android:id="@+id/txtParkingFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_rupee_svgrepo_com" />

            <TextView
                android:id="@+id/txtEntryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtPhNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l02"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_whatsapp_svgrepo_com" />

        <Button
            android:id="@+id/btnGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPhNo"
            android:text="@string/verified_and_go" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>